<?xml version="1.0" encoding="utf-8"?>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/btnKeyguard"
	    style="@style/WidgetBackground"
		android:layout_width="0dp" android:layout_weight="1"
		android:layout_height="fill_parent"
		android:orientation="vertical">

		<ImageView android:id="@+id/imgKeyguard"
			android:background="@drawable/appwidget_button_top"
			android:layout_width="fill_parent" android:layout_height="0dp"
			android:layout_weight="1" android:scaleType="center"
			android:contentDescription="@string/lockscreen_indicator"
			android:clickable="true" android:focusable="true" />

		<ImageView android:id="@+id/indKeyguard"
			android:background="@drawable/appwidget_button_bottom"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:contentDescription="@string/lockscreen_indicator"
			android:clickable="true" android:focusable="true"
			android:scaleType="fitXY" />
	</LinearLayout>
