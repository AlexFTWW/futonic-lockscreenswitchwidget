<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.futonredemption.nokeyguard" android:versionName="4.5" android:versionCode="45">
	<application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true">
	
		<activity android:name=".activities.NoKeyguardPreferenceActivity"
			android:label="@string/activity_preferences"
			android:enabled="true" android:exported="true"
            android:launchMode="singleTop"
            android:noHistory="true"
            android:excludeFromRecents="true" />
		<receiver android:name=".appwidgets.AppWidgetProvider1x1" android:label="@string/widget_label_1x1"
			android:enabled="true" android:exported="true">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
				<action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
				<action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
				<!-- 
				<action android:name="android.intent.action.CAMERA_BUTTON" />
				<action android:name="android.intent.action.CALL_BUTTON" />
				 -->
			</intent-filter>
			<meta-data android:name="android.appwidget.provider"
				android:resource="@xml/appwidget_1x1" />
		</receiver>
		<service android:exported="true" android:name=".services.DisableKeyguardService"
			android:label="@string/service_name" android:enabled="true" />
	</application>
	<uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
	<!--  <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" /> -->
	<uses-feature android:name="android.hardware.touchscreen" android:required="false" />
	<uses-sdk android:minSdkVersion="3" />
</manifest>
